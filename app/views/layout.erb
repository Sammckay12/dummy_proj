<!DOCTYPE html>
<html>
<head>
</head>
<body>
  <% if current_user %>
    <h1>Hello <%=current_user.name%>!</h1>
    <form action ="/sessions" method ="post">
      <input type='hidden' name='_method' value='delete'>
      <input type = "submit" value = "Log Out"/>
    </form>
  <%else%>
  <h1>Welcome to Makersbnb</h1>
  <%if flash[:errors]%>
  <div id ="errors">
  <%=flash[:errors]%>
  </div>
  <% end %>
  <% end %>
  <%= yield %>
</body>
</html>
